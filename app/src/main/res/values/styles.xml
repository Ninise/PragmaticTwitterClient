<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/justWhite</item>
        <item name="colorPrimaryDark">@color/justWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>

    <style name="ToolBar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:background">@color/justWhite</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorMainTwitter</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RobotoTextViewStyle.PostTweet" parent="RobotoTextViewStyle">
        <item name="android:textColor">@color/colorPostDark</item>
        <item name="android:textColorHint">@color/colorPostDark</item>
        <item name="android:background">@color/colorPostTweet</item>
    </style>

    <style name="RobotoTextViewStyle.HomeToolBar" parent="RobotoTextViewStyle">
        <item name="android:textColor">@color/colorPostDark</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:style/Widget.Button">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/justWhite</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="RobotoButtonStyle.PostTweet" parent="RobotoButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPostDark</item>
        <item name="android:background">@color/colorPostTweet</item>
    </style>

</resources>
