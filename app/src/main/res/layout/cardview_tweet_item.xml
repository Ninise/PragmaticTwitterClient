<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv"
                card_view:cardElevation="7dp"
                card_view:cardUseCompatPadding="true">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/cardViewTweetImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            />

        <LinearLayout
            android:id="@+id/userAndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cardViewTweetImage"
            android:layout_marginLeft="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardViewContrib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                style="@style/RobotoTextViewStyle.HomeToolBar"
                />

            <TextView
                android:id="@+id/cardViewTweetTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                style="@style/RobotoTextViewStyle.HomeToolBar"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/cardViewTweetMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/userAndTime"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/RobotoTextViewStyle.HomeToolBar"
            />

    </RelativeLayout>
    
</android.support.v7.widget.CardView>