<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@drawable/header"
    >
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/userProfileIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:civ_border_color="@color/colorBorderOfCircleImageView"
        app:civ_border_width="3dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="12"
        app:civ_shadow_color="@color/colorShadowOfCircleImageView"
        />

    <TextView
        android:id="@+id/userNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userName"
        android:layout_below="@id/userProfileIcon"
        android:layout_marginLeft="8dp"
        android:gravity="left"
        android:paddingBottom="4dp"
        style="@style/RobotoTextViewStyle.NavigationHeader"
        />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/userNickName"
        android:layout_alignStart="@+id/userNickName"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="2dp"
        android:gravity="left"
        style="@style/RobotoTextViewStyle.NavigationHeader"
        />

</RelativeLayout>